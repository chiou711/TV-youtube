<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/file_list_linear"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
	<TextView
        android:id="@+id/file_list_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="22sp"
        android:textStyle="bold"
    	android:paddingLeft="3dp"
		android:text="Import SDCard JSON file" />
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />

	<ListView
	    	android:id="@+id/file_list"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
            android:layout_weight="1"
            android:nextFocusDown="@+id/view_back"
            android:nextFocusRight="@+id/view_back"/>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />

	<LinearLayout
		android:id="@+id/view_back_btn_bg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/bar_color"
		android:gravity="center_horizontal">
	<Button
		android:id="@+id/view_back"
		android:layout_width="100dp"
	    android:layout_height="wrap_content"
		android:text="Back"
		android:layout_margin="5dp"
		android:textColor="@android:color/white"
        android:nextFocusUp="@android:id/list"
        android:nextFocusLeft="@android:id/list"
        android:background="@drawable/button_nav">
	</Button>
	</LinearLayout>
</LinearLayout>